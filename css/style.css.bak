 /* set*/
	body{margin:0;padding:0; height:100%;font-size:0.75em;}
	html, h1 ,h2, h3, h4, h5, h6{margin:0; padding:0; border:0; height:100%}
	h1, h2, h3, h4, h5, h6 {font-size:17px; font-family:'NanumSquare','Malgun Gothic', dotum, sans-serif}
	ul,dl,dt,dd,li{margin:0; padding:0; list-style:none}
	img{max-width:100%; height:auto;}
	p {margin:0;padding:0;word-break:break-all}

	a{
		text-decoration:none;
		color:black;
	}

	*{box-sizing:border-box;}

	.warp{min-height:100%; position:relative; padding-bottom:299.333px;}

	/* 헤더 - 로고, 상단메뉴*/
	.header{
		background:#000000;
		overflow:hidden
	}

	.header > div{overflow:hidden; max-width:1200px; margin:0 auto;}
	.header > div > div.logo{}
	.header > div > div.top-btn{}

	.header .logo{
		float:left;
	}

	.header .logo h1{font-size:17px;}
	.header .logo h1 a{display:block; padding:5px;}
	.header .logo h1 img{width:100px;}

	.header .top-btn{
		float:right;
	}
	.header .top-btn ul{
	 overflow:hidden; margin-top:10px;
	}
	.header .top-btn ul li{
		float:left;
		margin-left:10px;
	}

	.header .top-btn ul li a{
		color:#fff;
		font-size:14px;
		display:block;
		padding:5px;
	}

	.menu{
		border-bottom:1px solid gray;
	}

	.menu > div{
		max-width:1200px;
		margin:0 auto;	
	}

	.menu > div > ul{
		text-align:center;
	}
	.menu > div > ul > li{
		display:inline-block;
		position:relative;
	}

	.menu .menu-container > ul > li a{
		display:block;
		padding:10px;
		font-size:17px;
		margin:10px 40px;
	}

	.menu .menu-container ul li a:hover{color:#25a5ff;}

	.menu > div > ul > li:hover ul.submenu{display:block}
	.menu > div > ul > li > ul.submenu{position:absolute; z-index:9; background:#fff; display:none;}
	.menu > div > ul > li ul.submenu a{margin:5px; font-size:14px;} 

	.banner .swiper-container{max-width:1200px; margin:0 auto;}

	.tab-menu ul{overflow:hidden; text-align:center;}
	.tab-menu ul li{float:left; width:33.33%;}
	.tab-menu ul li a{display:block; padding:5px 10px; border-bottom:1px solid #e1e1e1; font-size:14px; color:#888}
	.tab-menu ul li.on a{color:#057bf5; font-weight:bold; border-bottom:1px solid #057b5f}
	.tab-menu ul li:hover a{color:#057bf5;}

	.tab-con{}
	.tab-con ul li{overflow:hidden;}
	.tab-con ul li:hover{border-bottom:1px dashed #e1e1e1;}
	.tab-con ul li a{float:left; display:block; padding:5px; font-size:15px;}
	.tab-con ul li a:before{
		content:""; 
		display:inline-block; 
		width:3px; 
		height:3px; 
		background:#ccc; 
		border-radius:50%; 
		vertical-align: middle; 
		margin-right: 5px;
	}

	.tab-con ul li span{float:right; padding:5px; font-size:13px; color: #888;}

	.bbs-box > div{overflow:hidden; max-width:1200px; margin:0 auto;}
	.bbs-box > div > .board-box{float:left; width:50%;}
	.bbs-box > div > .board-box > div{padding:10px;}
	.bbs-box > div > .right-banner{float:right; width:50%;}
	.bbs-box > div > .right-banner .r-slide{padding:10px;}

	.footer{
		position:fixed;
		left:0;
		bottom:0;
		right:0;
		width:100%;
		background: #000000; color:#ccc;
	}
	.footer > div{padding : 20px;}
	.footer > h1{font-size : 17px; margin-bottom:10px;}
	.footer > p{font-size : 13px; line-height:160%; padding:0; margin:0;}
	.footer > span{font-size:12px; color:#999;}

	.icon-container{
		display:flex;
		align-items: center;
		justify-content:space-between;
	}

	.icon-container i{
		float:right;
		margin-right:20px;
		transition: transform 0.7s;
	}

	.icon-container i:hover{
		transform: scale(1.3);
	}